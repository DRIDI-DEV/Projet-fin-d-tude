{% extends 'base.html.twig' %}

{% block title %}Media index{% endblock %}

{% block body %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <br>
    <h1 style="text-align: center"><u>Liste des Medias</u></h1>


    <hr>
<br>
<div style="margin-left: 50px; margin-right: 50px;">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th style="width: 25%">Titre</th>


                <th style="width: 25%">Date de création</th>
                <th style="width: 25%"></th>
                <th style="width: 25%"></th>
            </tr>
        </thead>
        <tbody>
        {% for medium in media %}
            <tr>
                <td style="width: 25%">{{ medium.title }}</td>


                <td style="width: 25%">{{ medium.creationDate|date('Y-m-d H:i:s') }}</td>


                <td style="width: 25%;">
                    <a class="btn btn-outline-dark" href="{{ path('media_show', {'id': medium.id}) }}">Afficher</a>
                    <a class="btn btn-outline-dark" href="{{ path('media_edit', {'id': medium.id}) }}">Modifier</a>

                </td>
                <td style="width: 25%;">
                    <a>{{ include('media/_delete_form.html.twig') }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <table class="table">
        <a class="btn btn-dark" href="{{ path('media_new') }}">Ajouter nouveau</a>
       <!-- <a class="btn btn-dark" href="{{ path('media_search')}}">recherche avancée</a>-->
    </table>
    </div>
{% endblock %}
