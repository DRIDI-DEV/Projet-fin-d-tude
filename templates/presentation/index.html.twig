{% extends 'base.html.twig' %}

{% block title %}Presentation index{% endblock %}

{% block body %}
    <h1>Presentation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_pres</th>
                <th>Date</th>
                <th>Client</th>
                <th>Id_contenu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for presentation in presentations %}
            <tr>
                <td>{{ presentation.id }}</td>
                <td>{{ presentation.idPres }}</td>
                <td>{{ presentation.date ? presentation.date|date('Y-m-d') : '' }}</td>
                <td>{{ presentation.client }}</td>
                <td>{{ presentation.idContenu }}</td>
                <td>
                    <a href="{{ path('presentation_show', {'id': presentation.id}) }}">show</a>
                    <a href="{{ path('presentation_edit', {'id': presentation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('presentation_new') }}">Create new</a>
{% endblock %}
